@model IndustryIncident.Models.IncidentType

@{
    ViewData["Title"] = "Create";
}

<h1 style="text-align: center;">Create new type</h1>
<hr />
<div>
    <form asp-action="Create" class="row g-3" style="max-width: 57em;margin: auto;">


        <div class="col-12">
            <label asp-for="Type" class="control-label"></label>
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        
        <div class="col-12" style="text-align: center;">
            <button type="submit" class="btn btn-primary">Create</button>
            <a type="button" class="button btn btn-secondary" asp-action="Index" >Back to List</a>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
