@model IndustryIncident.Models.Incident

@{
    ViewData["Title"] = "Create";
}
<h1 style="text-align: center;">Create new incident</h1>
<hr />
<div>
    <form asp-action="Create" class="row g-3" style="max-width: 57em;margin: auto;">
        <div class="form-group" style="display:none">
            <label asp-for="Iduser" class="control-label"></label>
            <input asp-for="Iduser" class="form-control" value="@User.Identity?.Name" />
        </div>
       

        <div class="col-12">
            <label asp-for="Zone" class="control-label"></label>
            <select asp-for="Zone" class="form-select" asp-items="ViewBag.Zone"></select>
        </div>
        <div class="col-md-12">
            <label asp-for="Type" class="control-label"></label>
            <select asp-for="Type" class="form-select" asp-items="ViewBag.Type"></select>
            <span asp-validation-for="Type" class="text-danger"></span>

        </div>
        <div class="col-md-12">
            <label asp-for="Indicator" class="control-label"></label>
            <select asp-for="Indicator" class="form-select" asp-items="ViewBag.Indicator"></select>
        </div>
        <div class="col-12">
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="col-12" style="text-align: center;">
            <button type="submit" class="btn btn-primary">Create</button>
            <a type="button" class="button btn btn-secondary" asp-action="Index" asp-controller="incidents">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
