@model IndustryIncident.Models.Indicator

@{
    ViewData["Title"] = "Edit";
}
<h1 style="text-align: center;">Edit indicator</h1>
<hr />
<div>
    <form asp-action="Edit" class="row g-3" style="max-width: 57em;margin: auto;">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-12">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-12" style="text-align: center;">
            <button type="submit" class="btn btn-primary">Edit</button>
            <a type="button" class="button btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
