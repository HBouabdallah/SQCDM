@model IndustryIncident.Models.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Create";
}
<h1 style="text-align: center;">Create new user</h1>
<hr />
<div>
    <form asp-action="Create" class="row g-3" style="max-width: 57em;margin: auto;">
        <div class="col-12">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="col-12">
                           <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="FamillyName" class="control-label"></label>
            <input asp-for="FamillyName" class="form-control" />
            <span asp-validation-for="FamillyName" class="text-danger"></span>

        </div>
        <div class="col-md-12">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="col-md-12">
                           <label asp-for="AccesID" class="control-label"></label>
                <select asp-for="AccesID" class="form-select" asp-items="ViewBag.Zone"></select>

        </div>
            <div class="col-md-12">
            <label asp-for="RoleID" class="control-label"></label>
            <select asp-for="RoleID" class="form-select" asp-items="ViewBag.Role"></select>
        </div>
        <div class="col-12" style="text-align: center;">
            <button type="submit" class="btn btn-primary">Create</button>
            <a type="button" class="button btn btn-secondary" asp-action="Index" >Back to List</a>
        </div>
    </form>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
